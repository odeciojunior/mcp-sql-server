# =============================================================================
# Default Database Connection (required)
# =============================================================================
DB_HOST=localhost
DB_PORT=1433
DB_USER=sa
DB_PASSWORD=YourPassword123
DB_NAME=YourDatabase
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_ENCRYPT=false
DB_TRUST_CERT=true

# Connection timeouts
# DB_TIMEOUT=30
# DB_QUERY_TIMEOUT=120

# =============================================================================
# Connection Pool (optional, defaults shown)
# =============================================================================
# DB_POOL_MIN_SIZE=1
# DB_POOL_MAX_SIZE=5
# DB_POOL_IDLE_TIMEOUT=300
# DB_POOL_HEALTH_CHECK_INTERVAL=30
# DB_POOL_ACQUIRE_TIMEOUT=10.0
# DB_POOL_MAX_LIFETIME=3600

# =============================================================================
# Multi-Database Support (optional)
# =============================================================================
# Comma-separated list of additional database aliases
# DB_DATABASES=analytics,archive

# Each alias uses prefixed env vars: DB_{ALIAS}_*
# Example for "analytics" alias:
# DB_ANALYTICS_HOST=localhost
# DB_ANALYTICS_PORT=1433
# DB_ANALYTICS_USER=sa
# DB_ANALYTICS_PASSWORD=YourPassword123
# DB_ANALYTICS_NAME=AnalyticsDB
# DB_ANALYTICS_DRIVER=ODBC Driver 18 for SQL Server
# DB_ANALYTICS_ENCRYPT=false
# DB_ANALYTICS_TRUST_CERT=true
# DB_ANALYTICS_POOL_MAX_SIZE=5

# =============================================================================
# Logging (optional)
# =============================================================================
# LOG_LEVEL=INFO
# LOG_FORMAT=text

# =============================================================================
# Query Files (optional)
# =============================================================================
# Directory for execute_query_file SQL files (default: query/)
# QUERY_DIR=query/
